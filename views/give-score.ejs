<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include part/css %>
    <title></title>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-4 col-md-offset-4">
      <table align="center">
        <form class="form-inline" action="/subjects/<%= subject.id %>/<%= student.id %>/give-score" method="post">
          <tr>
            <td>Student Name</td>
            <td> &nbsp; : &nbsp;</td>
            <td><%= student.first_name + ' ' + student.last_name %></td>
          </tr>
          <tr>
            <td>Subject Name</td>
            <td> &nbsp; : &nbsp;</td>
            <td><%= subject.subject_name %></td>
          </tr>
          <tr>
            <td>Score</td>
            <td> &nbsp; : &nbsp;</td>
            <td>
              <input type="text" name="score" placeholder="ex: 79" class="form-control" autofocus>
            </td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td>
              <button type="submit" name="button" class="btn btn-info">
                <span class="glyphicon glyphicon-send"></span> &nbsp; Give Score
              </button>
            </td>
          </tr>
        </form>
      </table>
    </div>
  </body>
</html>
