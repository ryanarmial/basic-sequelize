<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include part/css %>
    <title></title>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-2 col-md-offset-5">
      <% editGuru.forEach( data => { %>


      <form class="form-inline" action="/teachers/edit/<%= data.id %>" method="post">
        <label>Firstname</label>
        <input type="text" name="first_name" class="form-control" value="<%= data.first_name %>">
        <label>Lastname</label>
        <input type="text" name="last_name" class="form-control" value="<%= data.last_name %>">
        <label>Email</label>
        <input type="text" name="email" class="form-control" value="<%= data.email %>"><br>
        <label>Subject</label><br>
        <select class="form-control" name="SubjectId">
          <% dataSubject.forEach( subject => { %>
            <%
              let selected = ''
              if(data.SubjectId == subject.id){
                selected = 'selected'
              }
            %>
            <option value="<%= subject.id %>" <%= selected %>><%= subject.subject_name %></option>
          <% }) %>
        </select>
        <br><br>

        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Edit Teacher</button>
      </form>

      <% }) %>

    </div>
  </body>
</html>
