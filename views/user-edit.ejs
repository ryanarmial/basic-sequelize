<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include part/css %>
    <title></title>
  </head>
  <body>
    <%- include part/menu %>
    <center>
      <h2>Edit User</h2>
      <% if(pesan){ %>
        <span style="color:red"><%= pesan %></span>
      <% } %>
    </center>
    <div class="col-md-2 col-md-offset-5">
      <form class="form-inline" action="/users/edit/<%= d.id %>" method="post">
        <label>Username</label><br>
        <input type="text" name="username" value="<%= d.username %>" class="form-control" disabled><br>
        <label>Password</label><br>
        <input type="password" name="password" value="<%= d.password %>" class="form-control"><br>
        <label>Role</label><br>
        <select class="form-control" name="role">
          <% if(d.role == 'administrator'){ %>
            <option value="administrator" selected>Administrator</option>
            <option value="akademik">Akademik</option>
            <option value="guru">Guru</option>
          <% } else if(d.role == 'akademik') { %>
            <option value="administrator">Administrator</option>
            <option value="akademik" selected>Akademik</option>
            <option value="guru">Guru</option>
          <% } else { %>
            <option value="administrator">Administrator</option>
            <option value="akademik">Akademik</option>
            <option value="guru" selected>Guru</option>
          <% }%>
        </select><br><br>
        <input type="text" name="secret" value="<%= d.secret %>" hidden="">
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Edit User</button>
      </form>
    </div>
  </body>
</html>
