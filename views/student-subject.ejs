<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include part/css %>
    <title></title>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-2 col-md-offset-5">


      <form class="form-inline" action="/students/<%= data.id %>/addsubject" method="post">
        <label>Firstname</label>
        <input type="text" name="first_name" class="form-control" value="<%= data.first_name %>" disabled>
        <label>Lastname</label>
        <input type="text" name="last_name" class="form-control" value="<%= data.last_name %>"disabled>
        <label>Email</label>
        <input type="text" name="email" class="form-control" value="<%= data.email %>" disabled> <br>
        <label>Adding Subject</label>
        <select class="form-control" name="SubjectId">
          <% dataSubject.forEach(d => { %>
            <option value="<%= d.id %>"><%= d.subject_name %></option>
          <%}) %>


        </select>
        <br><br>

        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Add Student Subject</button>
      </form>


    </div>
  </body>
</html>
