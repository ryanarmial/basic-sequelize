<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include part/css %>
    <title></title>
  </head>
  <body>
    <div class="container">
      <%- include part/menu %>
    <div class="row">
      <div class="col-md-2 text-top col-md-offset-1">
        <form class="form-inline" action="/students" method="post">
          <label>Firstname</label>
          <input type="text" name="first_name" class="form-control" placeholder="first name">
          <label>Lastname</label>
          <input type="text" name="last_name" class="form-control" placeholder="last name">
          <label>Email</label>
          <input type="text" name="email" class="form-control" placeholder="email"><br><br>

          <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Add Student</button>
        </form>
      </div>
      <div class="col-md-8">
        <table class="table table-stripped">
          <tr>
            <td>No</td>
            <td>Std ID</td>
            <td>Student Name</td>
            <td>Email</td>
            <td>Subjects</td>
            <td>Action</td>
          </tr>
          <% let no =1; dataSiswa.forEach(data => { %>
            <tr>
              <td><%= no++ %></td>
              <td><%= data.id %></td>
              <td><%= data.first_name + ' ' + data.last_name  %></td>
              <td><%= data.email %></td>
              <td>
                <a href="/students/<%= data.id %>/addsubject">
                  <!-- <button type="button" name="button" class="btn btn-success"> -->
                    <span class="glyphicon glyphicon-list-alt"></span> Add Subject
                  <!-- </button> -->
                </a>
              </td>
              <td>
                <a href="/students/edit/<%= data.id %>">
                  <!-- <button type="button" name="button" class="btn btn-warning"> -->
                    <span class="glyphicon glyphicon-edit"></span> Edit
                  <!-- </button> -->
                </a>
                <a href="/students/delete/<%= data.id %>" onclick="return confirm('Yakin mau delete Siswa: \n<%= data.first_name + ' ' + data.last_name  %>?\n\n Klik cancel untuk membatalkan')">
                  <!-- <button type="button" name="button" class="btn btn-danger"> -->
                    <span class="glyphicon glyphicon-trash"></span> Delete
                  <!-- </button> -->
                </a>
              </td>
            </tr>
          <% })%>

        </table>
      </div>
    </div>
    </div>
  </body>
</html>
